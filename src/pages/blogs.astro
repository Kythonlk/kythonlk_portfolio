---
import Layout from '../layouts/page.astro';

async function getPosts() {
const response = await fetch('https://raw.githubusercontent.com/Kythonlk/kythonlk_portfolio/main/public/posts.json');
  const posts = await response.json();
  return posts; 
}

const posts = await getPosts();

---

<Layout>
  <section class="py-12 bg-gray-900/20 text-gray-900">
    <div class="container mx-auto px-4 md:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center mb-12 text-black">Blogs</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"> 
        {posts.map((post) => (
          <div 
            key={post.id} 
            class="bg-white/60 rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300 ease-in-out transform hover:scale-105"
          >
            {post.img ? (
              <img 
                src={`${post.img}`} 
                alt={post.title} 
                class="w-full h-80 object-cover" 
              />
            ) : (
              <img 
                src={`https://picsum.photos/seed/${encodeURIComponent(post.title)}/400/200`} 
                alt={post.title} 
                class="w-full h-48 object-cover" 
              />
            )}
            <div class="p-6 flex flex-col justify-between">
              <h4 class="text-xl font-bold mb-2 text-gray-900">{post.title}</h4>
              <p class="text-gray-600 mb-4 text-xs expert" set:html={post.excerpt} /> 
              <div class="flex justify-between items-center">
                <a href={'/blogs/'+post.link} target="_blank" rel="noopener noreferrer" class="text-blue-700 hover:underline">Read More</a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
