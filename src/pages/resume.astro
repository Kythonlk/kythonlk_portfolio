---
import Layout from '../layouts/page.astro';

const experiences = [
  {
    title: "Senior Software Developer",
    company: "Extra Co Group",
    period: "Sep 2023 - Present",
    description: "Revamped software and maintained websites",
    skills: ["Next.js", "Go", "React Native", "git", "express.js", "+12 others"]
  },
  {
    title: "Software Engineer",
    company: "Dhabione",
    period: "Feb 2023 - Sep 2023",
    description: "Created and maintained software",
    skills: ["Next.js", "Go", "git", "express.js", "+10 others"]
  },
  {
    title: "Associate Software Engineer",
    company: "Lead Lanka International (Pvt) Ltd",
    period: "Jul 2022 - Feb 2023",
    description: "Wordpress development",
    skills: ["Next.js", "Php", "Laravel", "git", "+7 others"]
  },
  {
    title: "Wordpress Developer",
    company: "Cyber Concepts Sri Lanka",
    period: "Aug 2021 - Jun 2022",
    description: "Designed and developed websites",
    skills: ["Mysql", "Php", "Laravel", "git", "+7 others"]
  },
  {
    title: "Trainee Web Developer",
    company: "SATASME HOLDINGS PVT LTD",
    period: "Jan 2020 - Dec 2021",
    description: "Worked as trainee web developer",
    skills: ["Php", "Wordpress Development", "ftp", "Elementor", "+5 others"]
  }
];

---

<Layout>
  <section class="py-16">
    <div class="container mx-auto px-4 md:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-center mb-12 text-indigo-800">Work Experience</h2>
      <div class="relative">
        <div class="absolute left-1/2 transform -translate-x-1/2 w-1 bg-indigo-200 h-full md:block hidden"></div>
        {experiences.map((job, index) => (
          <div key={index} class="relative flex flex-col items-center md:flex-row md:items-start mb-12">
            <div class="md:hidden block w-4 h-4 bg-indigo-500 rounded-full mb-6"></div>
            
            <div class={`relative md:w-5/12 w-full p-6 bg-white/80 rounded-lg shadow-lg transition-all duration-300 hover:shadow-xl hover:scale-105 ${index % 2 === 0 ? 'md:ml-auto' : 'md:mr-auto'}`}>
              <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4">
                <h4 class="text-2xl font-semibold text-indigo-700">{job.title}</h4>
                <p class="text-sm font-medium text-gray-500 mt-1 md:mt-0">{job.period}</p>
              </div>
              <p class="text-lg font-medium text-gray-700 mb-2">{job.company}</p>
              <p class="text-gray-600 mb-4">{job.description}</p>
              <div class="flex flex-wrap gap-2">
                {job.skills.map((skill, skillIndex) => (
                  <span key={skillIndex} class="px-3 py-1 bg-indigo-100 text-indigo-800 rounded-full text-sm font-medium">{skill}</span>
                ))}
              </div>
            </div>

            <div class="hidden md:block absolute left-1/2 transform -translate-x-1/2 top-1/2 -translate-y-1/2 w-6 h-6 bg-indigo-500 rounded-full border-4 border-white"></div>
          </div>
        ))}
      </div>
    </div>
  </section>
  <a href="./my.pdf" download class="flex justify-center mx-auto text-center w-40 text-base text-blue-900 hover:bg-blue-100 bg-white/50 py-1 px-4 rounded my-4">
      Download CV
    </a>
</Layout>
